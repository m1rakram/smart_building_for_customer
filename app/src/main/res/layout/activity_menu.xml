<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.example.admin.widesmart.MenuActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:weightSum="100"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:text="22:44"
                    android:textColor="#FFFFFF"
                    android:textSize="145sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:text="26 December 2018"
                    android:textSize="45sp"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:weightSum="100"
                android:gravity="center">

                <TextView
                    android:id="@+id/weathering"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="45"
                    android:textColor="#FFFFFF"
                    android:text="Cloudy\n 18Â°C"
                    android:gravity="center_vertical|end"
                    android:textSize="55sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="55"
                    android:layout_margin="40dp"
                    android:src="@drawable/sun"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/shapebutton2"
                android:weightSum="100"
                android:layout_marginVertical="70dp"
                android:layout_marginHorizontal="40dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:layout_margin="20dp"
                    android:src="@drawable/nightmode"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:textSize="35sp"
                    android:text="Night Mode"
                    android:textColor="#FFFFFF"
                    android:gravity="center"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:layout_marginVertical="70dp"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/shapebutton2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:layout_margin="20dp"
                    android:src="@drawable/right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:textSize="35sp"
                    android:text="Main Menu"
                    android:textColor="#FFFFFF"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
